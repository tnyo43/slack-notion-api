{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "no-restricted-imports": ["warn", { "patterns": ["../"] }],
    "prettier/prettier": "error",
    "semi": "off",
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "space-before-function-paren": ["off"]
  }
}
